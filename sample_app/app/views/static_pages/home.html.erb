<% if logged_in? %>
  <div class="row">
    <section class="user-info">
      <%= render "shared/user_info" %>
    </section>
    <section>
      <%= render "shared/stats" %>
    </section>
    <section class="micropost-form">
      <%= render "shared/post_form", post: @post %>
    </section>
    <h3><%= t ".micropost_feed" %></h3>
    <%= render "shared/feed", feed_items: @feed_items %>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".welcome" %></h1>
    <h2>
      <%= t ".this_is" %>
      <a href="http://www.railstutorial.org/"><%= t ".tut" %></a>
      <%= t ".app" %>
    </h2>
    <%= link_to t(".sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
