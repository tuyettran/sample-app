<% provide :title, t(".edit_user") %>
<% provide :button_text, t(".save_changes") %>
<h1><%= t ".update_profile" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form_user", user: @user %>

    <div class="gravatar-edit">
      <%= gravatar_for @user %>
      <%= link_to t(".change"), "http://gravatar.com/emails" %>
    </div>
  </div>
</div>
